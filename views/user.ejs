<%- include header %>
<% posts.forEach(function (post, index) { %>
<div class="abstract-list">
  <p>
    <h3>
      <a href="/p/<%= post['_id'] %>"><%= post.title %></a>
    </h3>
  </p>
  <div class="info">
    作者：<a href="/u/<%= post.name %>"><%= post.name %></a><img src="<%= post.head %>" class="r_head" /></a> |
    日期：<%= post.time.minute %> |
    标签：
    <% post.tags.forEach(function (tag, index) { %>
      <% if (tag) { %>
        <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
      <% } %>
    <% }) %>
    <%# JSON.stringify(post.repost_info) %>
    <%# 'repost_from' in post.repost_info %>
    <% if ( 'repost_from' in post.repost_info ) { %>
       <br>
       <a href="/p/<%= post.repost_info.repost_from['_id'] %>">原文
       </a>
    <% } %>
  </div>
  <hr />
  <div class="abstract">
    <%- post.post %>
  </div>
  <p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %> | 
    转载：
    <% if (post.repost_info.repost_to) { %>
    <%= post.repost_info.repost_to.length %>
    <% } else { %>
    <%= 0 %>
    <% } %>
  </p>
</div>
<% }) %>
<%- include page %>
<%- include footer %>
<script src="/javascripts/controls.js"></script>
</body>
</html>